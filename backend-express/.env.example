# Logging
LOG_LEVEL=info

# Cors
CORS_ORIGIN=http://localhost:3000

# Python ML Service
ML_SERVICE_URL=http://localhost:8000
ML_SERVICE_API_KEY=your-ml-service-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100 